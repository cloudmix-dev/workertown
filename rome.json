{
  "$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
  "files": {
    "ignore": [
      "node_modules/*",
      "dist/*",
      ".next/*",
      ".turbo/*",
      ".wrangler/*",
      ".vercel/*",
      ".husky/*",
      ".changeset/*"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "organizeImports": {
    "enabled": true
  }
}
