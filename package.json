{
  "name": "@cloudmix-dev/workertown",
  "private": true,
  "workspaces": [
    "examples/*",
    "internal/*",
    "packages/*",
    "www/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev --no-cache --continue --concurrency=30",
    "test": "turbo test",
    "clean": "turbo clean && rm -rf node_modules",
    "lint": "rome check ./{packages,examples,internal,www}/*",
    "fmt": "rome format --write ./{packages,examples,internal,www}/*",
    "ci": "rome ci ./{packages,examples,internal,www}/*",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "turbo build --filter='./{packages,internal}/*' && changeset publish",
    "postinstall": "npx husky install"
  },
  "devDependencies": {
    "@changesets/cli": "~2.26.2",
    "@commitlint/cli": "~17.6.6",
    "@commitlint/config-conventional": "~17.6.6",
    "ava": "~5.3.1",
    "changeset": "~0.2.6",
    "husky": "~8.0.3",
    "rome": "~12.1.3",
    "tsx": "~3.12.7",
    "turbo": "~1.10.12",
    "typescript": "~5.1.6"
  },
  "packageManager": "npm@9.6.7"
}
